<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.flow.dao.FlowableUserDao">

    <select id="getUserName" resultType="String">
        select username from sys_user where id = #{value}
    </select>

    <select id="getRealNameList" resultType="String">
        select real_name from sys_user where id in
        <foreach item="id" collection="ids"  open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="getRoleNameList" resultType="String">
        select name from sys_role where id in
        <foreach item="id" collection="ids"  open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="getUserIdListByRoleIdList" resultType="long">
        select t1.id from sys_user t1, sys_role_user t2 where t1.id=t2.user_id and t1.status=1 and t2.role_id in
        <foreach item="id" collection="ids"  open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>